@model finale.Models.Incident

@{
    ViewData["Title"] = "Incident Details";
}

<style>

    /* ===== INCIDENT DETAILS PAGE ===== */
    .details-container {
        max-width: 650px;
        margin: 50px auto;
        background: #ffffff;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 5px 25px rgba(0,0,0,0.05);
    }

        .details-container h1 {
            text-align: center;
            color: #004c99;
            font-weight: 700;
            font-size: 2rem;
            margin-bottom: 8px;
        }

    .details-subtitle {
        text-align: center;
        color: #555;
        font-size: 1.1rem;
        margin-bottom: 20px;
    }

    .details-container hr {
        border: 1px solid #004c99;
        width: 60px;
        margin: 0 auto 30px auto;
    }

    .details-card dt {
        font-weight: 600;
        color: #004c99;
        margin-bottom: 5px;
    }

    .details-card dd {
        margin-bottom: 15px;
    }

    .details-buttons {
        display: flex;
        justify-content: space-between;
        margin-top: 25px;
    }

        .details-buttons .btn-primary {
            width: 48%;
            padding: 10px;
            border-radius: 8px;
            font-weight: 600;
            background-color: #004c99;
            border: none;
            transition: background-color 0.3s ease;
        }

            .details-buttons .btn-primary:hover {
                background-color: #003366;
            }

        .details-buttons .btn-secondary {
            width: 48%;
            padding: 10px;
            border-radius: 8px;
            font-weight: 600;
            background-color: #ccc;
            color: #333;
            text-align: center;
            transition: background-color 0.3s ease;
        }

            .details-buttons .btn-secondary:hover {
                background-color: #999;
                color: #fff;
            }

</style>
<<div class="details-container">
    <h1>Incident Details</h1>
    <p class="details-subtitle">View all information about this reported incident below.</p>
    <hr />

    <div class="details-card">
        <dl class="row">
            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Title)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Title)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Description)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DateReported)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.DateReported)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Volunteer)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Volunteer.Email)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Status)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Status)</dd>
        </dl>
    </div>

    <div class="details-buttons">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit Incident</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
