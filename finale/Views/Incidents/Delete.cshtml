@model finale.Models.Incident

@{
    ViewData["Title"] = "Delete Incident";
}

<style>
    /* ===== DELETE INCIDENT PAGE ===== */
    .delete-container {
        max-width: 650px;
        margin: 50px auto;
        background: #ffffff;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 5px 25px rgba(0,0,0,0.05);
    }

        .delete-container h1 {
            text-align: center;
            color: #d32f2f;
            font-weight: 700;
            font-size: 2rem;
            margin-bottom: 8px;
        }

    .warning-text {
        text-align: center;
        color: #cc0000;
        font-size: 1.1rem;
        margin-bottom: 20px;
    }

    .delete-container hr {
        border: 1px solid #d32f2f;
        width: 60px;
        margin: 0 auto 30px auto;
    }

    .delete-details dt {
        font-weight: 600;
        color: #004c99;
        margin-bottom: 5px;
    }

    .delete-details dd {
        margin-bottom: 15px;
    }

    .delete-form .form-buttons {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
    }

    .delete-form .btn-danger {
        width: 48%;
        padding: 10px;
        border-radius: 8px;
        font-weight: 600;
        background-color: #d32f2f;
        border: none;
        transition: background-color 0.3s ease;
    }

        .delete-form .btn-danger:hover {
            background-color: #a00000;
        }

    .delete-form .btn-secondary {
        width: 48%;
        padding: 10px;
        border-radius: 8px;
        font-weight: 600;
        background-color: #ccc;
        color: #333;
        text-align: center;
        transition: background-color 0.3s ease;
    }

        .delete-form .btn-secondary:hover {
            background-color: #999;
            color: #fff;
        }

</style>
<<div class="delete-container">
    <h1>Delete Incident</h1>
    <p class="warning-text">⚠️ Are you sure you want to delete this incident? This action is irreversible.</p>
    <hr />

    <div class="delete-details">
        <dl class="row">
            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Title)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Title)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Description)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DateReported)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.DateReported)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Volunteer)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Volunteer.Email)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Status)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Status)</dd>
        </dl>
    </div>

    <form asp-action="Delete" class="delete-form">
        <input type="hidden" asp-for="Id" />
        <div class="form-buttons">
            <input type="submit" value="Delete Incident" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
