@model finale.Models.Incident

@{
    ViewData["Title"] = "Report an Incident";
}

<style>
    /* ===== INCIDENT FORM PAGE ===== */
    .incident-form-container {
        max-width: 650px;
        margin: 50px auto;
        background: #ffffff;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 5px 25px rgba(0,0,0,0.05);
    }

        .incident-form-container h1 {
            text-align: center;
            color: #004c99;
            font-weight: 700;
            font-size: 2.2rem;
            margin-bottom: 8px;
        }

    .form-subtitle {
        text-align: center;
        color: #555;
        font-size: 1.1rem;
        margin-bottom: 20px;
    }

    .incident-form-container hr {
        border: 1px solid #004c99;
        width: 60px;
        margin: 0 auto 30px auto;
    }

    .incident-form .form-group {
        margin-bottom: 20px;
    }

    .incident-form .form-control {
        width: 100%;
        padding: 10px;
        border-radius: 8px;
        border: 1px solid #ccc;
        font-size: 1rem;
        transition: border-color 0.3s ease;
    }

        .incident-form .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 2px rgba(0,123,255,0.1);
            outline: none;
        }

    .incident-form .btn-primary {
        width: 48%;
        padding: 10px;
        font-weight: 600;
        border-radius: 8px;
        background-color: #004c99;
        border: none;
        transition: background-color 0.3s ease;
    }

        .incident-form .btn-primary:hover {
            background-color: #003366;
        }

    .incident-form .btn-secondary {
        width: 48%;
        padding: 10px;
        font-weight: 600;
        border-radius: 8px;
        background-color: #ccc;
        color: #333;
        text-decoration: none;
        display: inline-block;
        text-align: center;
        transition: background-color 0.3s ease;
        margin-left: 4%;
    }

        .incident-form .btn-secondary:hover {
            background-color: #999;
            color: #fff;
        }

    .form-buttons {
        display: flex;
        justify-content: space-between;
    }


</style>
<div class="incident-form-container">
    <h1>Report an Incident</h1>
    <p class="form-subtitle">Fill in the details below to help us respond quickly.</p>
    <hr />

    <form asp-action="Create" class="incident-form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="form-control" placeholder="Enter a brief title (e.g., Flood in Durban)" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" class="form-control" placeholder="Describe the incident in detail"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DateReported" class="control-label"></label>
            <input asp-for="DateReported" class="form-control" type="date" />
            <span asp-validation-for="DateReported" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="VolunteerId" class="control-label"></label>
            <select asp-for="VolunteerId" class="form-control" asp-items="ViewBag.VolunteerId">
                <option value="">-- Select Volunteer --</option>
            </select>
            <span asp-validation-for="VolunteerId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Status" class="control-label"></label>
            <input asp-for="Status" class="form-control" placeholder="Enter current status (e.g., Pending, Resolved)" />
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <div class="form-buttons">
            <input type="submit" value="Submit Incident" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Back to Incidents</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
