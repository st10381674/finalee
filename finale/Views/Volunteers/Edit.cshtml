@model finale.Models.Volunteer

@{
    ViewData["Title"] = "Edit Volunteer";
}

<style>
    body {
        background-color: #f8faff;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h1, h4 {
        color: #1e3a8a;
        font-weight: 700;
        text-align: center;
    }

    hr {
        border: 1px solid #2563eb;
        width: 80%;
        margin: 0 auto 20px auto;
    }

    .edit-container {
        background: white;
        width: 60%;
        margin: 0 auto;
        padding: 30px 40px;
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 18px;
    }

    label {
        font-weight: 600;
        color: #1e3a8a;
    }

    .form-control {
        border-radius: 10px;
        border: 1px solid #cbd5e1;
        padding: 10px;
        transition: border-color 0.3s;
    }

        .form-control:focus {
            border-color: #2563eb;
            box-shadow: 0 0 0 0.2rem rgba(37, 99, 235, 0.2);
        }

    .btn-primary {
        background-color: #1e3a8a;
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        font-weight: 600;
        width: 100%;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #2563eb;
        }

    .back-link {
        display: block;
        text-align: center;
        margin-top: 20px;
        font-weight: 600;
        color: #1e3a8a;
        text-decoration: none;
    }

        .back-link:hover {
            color: #2563eb;
            text-decoration: underline;
        }

    .text-danger {
        font-size: 0.9rem;
    }
</style>

<h1>Edit Volunteer</h1>
<h4>Update Volunteer Details</h4>
<hr />

<div class="edit-container">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="FullName" class="control-label"></label>
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PhoneNumber" class="control-label"></label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DateJoined" class="control-label"></label>
            <input asp-for="DateJoined" class="form-control" type="date" />
            <span asp-validation-for="DateJoined" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Status" class="control-label"></label>
            <select asp-for="Status" class="form-control">
                <option value="Active">Active</option>
                <option value="Inactive">Inactive</option>
                <option value="Pending">Pending</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="💾 Save Changes" class="btn btn-primary" />
        </div>
    </form>
</div>

<a asp-action="Index" class="back-link">⬅ Back to List</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
